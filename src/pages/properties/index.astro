---
import Layout from '../../layouts/Layout.astro';
import PropertyCard from '../../components/PropertyCard.astro';
import { getProperties } from '../../lib/cosmic';

const properties = await getProperties();
---

<Layout title="Properties - Elite Real Estate">
	<main>
		<!-- Page Header -->
		<section class="bg-gradient-to-r from-blue-900 to-blue-700 text-white py-20">
			<div class="max-w-7xl mx-auto px-4">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Our Properties</h1>
				<p class="text-xl">Discover our exclusive collection of luxury properties</p>
			</div>
		</section>

		<!-- Properties Grid -->
		<section class="py-16">
			<div class="max-w-7xl mx-auto px-4">
				{properties.length > 0 ? (
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						{properties.map((property) => (
							<PropertyCard property={property} />
						))}
					</div>
				) : (
					<div class="text-center py-12">
						<h2 class="text-2xl font-bold text-gray-900 mb-4">No Properties Available</h2>
						<p class="text-gray-600 text-lg">Please check back later for new property listings.</p>
					</div>
				)}
			</div>
		</section>
	</main>
</Layout>