---
import Layout from '../../layouts/Layout.astro';
import { getAboutPage, getAgents } from '../../lib/cosmic';
import AgentCard from '../../components/AgentCard.astro';

const aboutPage = await getAboutPage();
const agents = await getAgents();
---

<Layout title="About - Elite Real Estate">
  <main>
    {aboutPage ? (
      <div>
        <!-- Hero Section -->
        <section class="relative h-96 bg-gradient-to-r from-gray-900 to-gray-700 flex items-center justify-center">
          {aboutPage.metadata.hero_image && (
            <img 
              src={`${aboutPage.metadata.hero_image.imgix_url}?w=1920&h=600&fit=crop&auto=format,compress`} 
              alt="About Hero"
              class="absolute inset-0 w-full h-full object-cover"
            />
          )}
          <div class="absolute inset-0 bg-black opacity-50"></div>
          <div class="relative z-10 text-center text-white px-4">
            <h1 class="text-5xl font-bold mb-4">{aboutPage.metadata.hero_title}</h1>
            <p class="text-xl">{aboutPage.metadata.hero_subtitle}</p>
          </div>
        </section>

        <!-- Story Section -->
        <section class="py-16 bg-white">
          <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
              <div>
                <h2 class="text-4xl font-bold mb-6">{aboutPage.metadata.story_title}</h2>
                <div class="prose prose-lg text-gray-700" set:html={aboutPage.metadata.story_content}></div>
              </div>
              {aboutPage.metadata.story_image && (
                <div>
                  <img 
                    src={`${aboutPage.metadata.story_image.imgix_url}?w=600&h=400&fit=crop&auto=format,compress`} 
                    alt="Our Story"
                    class="w-full h-96 object-cover rounded-lg shadow-lg"
                  />
                </div>
              )}
            </div>
          </div>
        </section>

        <!-- Mission Section -->
        <section class="py-16 bg-gray-50">
          <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
              <h2 class="text-4xl font-bold mb-6">Our Mission</h2>
              <p class="text-xl text-gray-700 leading-relaxed">{aboutPage.metadata.mission_statement}</p>
            </div>
          </div>
        </section>

        <!-- Values Section -->
        <section class="py-16 bg-white">
          <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto text-center">
              <h2 class="text-4xl font-bold mb-6">{aboutPage.metadata.values_title}</h2>
              <div class="prose prose-lg text-gray-700 mx-auto" set:html={aboutPage.metadata.values}></div>
            </div>
          </div>
        </section>

        <!-- Team Section -->
        <section class="py-16 bg-gray-50">
          <div class="container mx-auto px-4">
            <div class="text-center mb-12">
              <h2 class="text-4xl font-bold mb-6">{aboutPage.metadata.team_title}</h2>
              <p class="text-xl text-gray-700">{aboutPage.metadata.team_description}</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {agents.map((agent) => (
                <AgentCard agent={agent} />
              ))}
            </div>
          </div>
        </section>

        <!-- CTA Section -->
        <section class="py-16 bg-gray-900 text-white">
          <div class="container mx-auto px-4 text-center">
            <h2 class="text-4xl font-bold mb-6">{aboutPage.metadata.cta_title}</h2>
            <p class="text-xl mb-8">{aboutPage.metadata.cta_description}</p>
            <a href="/contact" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
              Get In Touch
            </a>
          </div>
        </section>
      </div>
    ) : (
      <div class="container mx-auto px-4 py-16">
        <h1 class="text-4xl font-bold text-center mb-8">About Elite Real Estate</h1>
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-xl text-gray-700 mb-8">
            We are a premier real estate agency dedicated to helping you find your dream home.
          </p>
          <a href="/contact" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
            Contact Us
          </a>
        </div>
      </div>
    )}
  </main>
</Layout>