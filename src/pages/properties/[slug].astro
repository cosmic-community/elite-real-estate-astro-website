// src/pages/properties/[slug].astro
---
import Layout from '../../layouts/Layout.astro';
import { getProperty, getProperties } from '../../lib/cosmic';
import type { Property } from '../../types';

export async function getStaticPaths() {
  const properties = await getProperties();
  
  return properties.map((property: Property) => ({
    params: { slug: property.slug },
    props: { property },
  }));
}

interface Props {
  property: Property;
}

const { property } = Astro.props as Props;

if (!property) {
  return Astro.redirect('/properties');
}
---

<Layout title={`${property.title} - Elite Real Estate`}>
  <main>
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-6xl mx-auto">
        <!-- Property Images -->
        <div class="mb-8">
          {property.metadata.gallery && property.metadata.gallery.length > 0 ? (
            <img 
              src={`${property.metadata.gallery[0].imgix_url}?w=1200&h=600&fit=crop&auto=format,compress`} 
              alt={property.title}
              class="w-full h-96 object-cover rounded-lg shadow-lg"
            />
          ) : (
            <img 
              src="/placeholder-property.jpg"
              alt={property.title}
              class="w-full h-96 object-cover rounded-lg shadow-lg"
            />
          )}
        </div>

        <!-- Property Details -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <h1 class="text-4xl font-bold mb-4">{property.title}</h1>
            <p class="text-xl text-gray-600 mb-6">{property.metadata.address}</p>
            
            <div class="bg-gray-50 p-6 rounded-lg mb-6">
              <h2 class="text-2xl font-semibold mb-4">Property Details</h2>
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <span class="font-medium">Price:</span>
                  <span class="text-2xl font-bold text-blue-600">${property.metadata.price?.toLocaleString()}</span>
                </div>
                <div>
                  <span class="font-medium">Type:</span>
                  <span>{typeof property.metadata.property_type === 'object' ? property.metadata.property_type.value : property.metadata.property_type}</span>
                </div>
                <div>
                  <span class="font-medium">Bedrooms:</span>
                  <span>{property.metadata.bedrooms}</span>
                </div>
                <div>
                  <span class="font-medium">Bathrooms:</span>
                  <span>{property.metadata.bathrooms}</span>
                </div>
                {property.metadata.square_feet && (
                  <div>
                    <span class="font-medium">Square Feet:</span>
                    <span>{property.metadata.square_feet.toLocaleString()}</span>
                  </div>
                )}
              </div>
            </div>

            {property.metadata.description && (
              <div class="mb-6">
                <h2 class="text-2xl font-semibold mb-4">Description</h2>
                <p class="text-gray-700 leading-relaxed">{property.metadata.description}</p>
              </div>
            )}

            {property.metadata.features && property.metadata.features.length > 0 && (
              <div class="mb-6">
                <h2 class="text-2xl font-semibold mb-4">Features</h2>
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                  {property.metadata.features.map((feature: string) => (
                    <li class="flex items-center">
                      <span class="text-blue-600 mr-2">âœ“</span>
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            )}
          </div>

          <div>
            <div class="bg-white p-6 rounded-lg shadow-lg">
              <h2 class="text-2xl font-semibold mb-4">Contact Agent</h2>
              <p class="text-gray-600 mb-6">Interested in this property? Get in touch with our agent.</p>
              
              <form class="space-y-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                  <input type="text" id="name" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                </div>
                
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                  <input type="email" id="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                </div>
                
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                  <input type="tel" id="phone" name="phone" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                
                <div>
                  <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                  <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="I'm interested in this property..."></textarea>
                </div>
                
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md transition-colors">
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>