---
import { getOffices } from '../lib/cosmic';

const offices = await getOffices();
---

<footer class="bg-gray-900 text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-2xl font-bold mb-4">Elite Real Estate</h3>
        <p class="text-gray-300 mb-4">Your trusted partner in luxury real estate.</p>
        <div class="flex space-x-4">
          <a href="#" class="text-gray-300 hover:text-white transition-colors">
            <span class="sr-only">Facebook</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
          <a href="#" class="text-gray-300 hover:text-white transition-colors">
            <span class="sr-only">Twitter</span>
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a></li>
          <li><a href="/properties" class="text-gray-300 hover:text-white transition-colors">Properties</a></li>
          <li><a href="/agents" class="text-gray-300 hover:text-white transition-colors">Agents</a></li>
          <li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About</a></li>
          <li><a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>
      
      <div>
        <h4 class="text-lg font-semibold mb-4">Contact Info</h4>
        {offices.length > 0 ? (
          <div class="space-y-4">
            {offices.map((office) => (
              <div>
                <h5 class="font-medium text-white">{office.metadata.office_name}</h5>
                <p class="text-gray-300 text-sm">{office.metadata.address}</p>
                {office.metadata.phone && (
                  <p class="text-gray-300 text-sm">{office.metadata.phone}</p>
                )}
              </div>
            ))}
          </div>
        ) : (
          <div class="text-gray-300">
            <p>123 Main Street</p>
            <p>City, State 12345</p>
            <p>(555) 123-4567</p>
            <p>info@eliterealestate.com</p>
          </div>
        )}
      </div>
    </div>
    
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-300">
      <p>&copy; 2024 Elite Real Estate. All rights reserved.</p>
    </div>
  </div>
</footer>