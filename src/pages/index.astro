---
import Layout from '../layouts/Layout.astro';
import PropertyCard from '../components/PropertyCard.astro';
import { getProperties } from '../lib/cosmic';
import type { Property } from '../types';

const properties = await getProperties();
const featuredProperties = properties.slice(0, 6);
---

<Layout title="Elite Real Estate - Find Your Dream Home">
	<main>
		<!-- Hero Section with Search -->
		<section class="relative bg-gradient-to-br from-primary-600 to-primary-800 text-white">
			<div class="absolute inset-0 bg-black/20"></div>
			<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
				<div class="text-center mb-12">
					<h1 class="text-4xl md:text-6xl font-bold mb-6">
						Find Your Perfect Home
					</h1>
					<p class="text-xl md:text-2xl text-primary-100 max-w-3xl mx-auto">
						Search millions of for-sale and rental listings, compare Zestimate home values and connect with local professionals.
					</p>
				</div>
				
				<!-- Search Bar -->
				<div class="max-w-4xl mx-auto">
					<div class="bg-white rounded-lg shadow-lg p-6">
						<div class="flex flex-col md:flex-row gap-4">
							<div class="flex-1">
								<input 
									type="text" 
									placeholder="Enter an address, neighborhood, city, or ZIP code"
									class="w-full px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-secondary-900 placeholder-secondary-500"
								/>
							</div>
							<div class="flex gap-2">
								<select class="px-4 py-3 border border-secondary-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 text-secondary-900">
									<option value="">All Types</option>
									<option value="house">House</option>
									<option value="condo">Condo</option>
									<option value="townhouse">Townhouse</option>
									<option value="apartment">Apartment</option>
								</select>
								<button class="btn-primary px-8 py-3 whitespace-nowrap">
									<svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
									</svg>
									Search
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Quick Stats -->
		<section class="py-12 bg-white border-b border-secondary-200">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
					<div class="flex flex-col items-center">
						<div class="text-3xl font-bold text-primary-600 mb-2">2M+</div>
						<div class="text-secondary-600">Homes for Sale</div>
					</div>
					<div class="flex flex-col items-center">
						<div class="text-3xl font-bold text-primary-600 mb-2">500K+</div>
						<div class="text-secondary-600">Rentals Available</div>
					</div>
					<div class="flex flex-col items-center">
						<div class="text-3xl font-bold text-primary-600 mb-2">$850K</div>
						<div class="text-secondary-600">Median Home Value</div>
					</div>
					<div class="flex flex-col items-center">
						<div class="text-3xl font-bold text-primary-600 mb-2">98%</div>
						<div class="text-secondary-600">Customer Satisfaction</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Featured Properties -->
		<section class="py-16 bg-secondary-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-secondary-900 mb-4">Featured Properties</h2>
					<p class="text-xl text-secondary-600">Discover our hand-picked selection of premium properties</p>
				</div>
				
				{featuredProperties.length > 0 ? (
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
						{featuredProperties.map((property: Property) => (
							<PropertyCard property={property} />
						))}
					</div>
				) : (
					<div class="text-center py-12">
						<svg class="w-16 h-16 text-secondary-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9h6v6H9z" />
						</svg>
						<p class="text-secondary-600 text-lg">No properties available at the moment.</p>
					</div>
				)}
				
				<div class="text-center mt-12">
					<a href="/properties" class="btn-primary text-lg px-8 py-4">
						View All Properties
					</a>
				</div>
			</div>
		</section>

		<!-- Services Section -->
		<section class="py-16 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-secondary-900 mb-4">Why Choose Elite Real Estate?</h2>
					<p class="text-xl text-secondary-600">Your trusted partner in finding the perfect property</p>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="text-center">
						<div class="bg-primary-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6">
							<svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
							</svg>
						</div>
						<h3 class="text-xl font-semibold text-secondary-900 mb-4">Advanced Search</h3>
						<p class="text-secondary-600">Find properties that match your exact criteria with our powerful search tools and filters.</p>
					</div>
					
					<div class="text-center">
						<div class="bg-primary-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6">
							<svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
							</svg>
						</div>
						<h3 class="text-xl font-semibold text-secondary-900 mb-4">Market Analytics</h3>
						<p class="text-secondary-600">Get detailed market insights and property valuations to make informed decisions.</p>
					</div>
					
					<div class="text-center">
						<div class="bg-primary-100 w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-6">
							<svg class="w-10 h-10 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
							</svg>
						</div>
						<h3 class="text-xl font-semibold text-secondary-900 mb-4">Expert Agents</h3>
						<p class="text-secondary-600">Connect with experienced local agents who know your market inside and out.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- How It Works -->
		<section class="py-16 bg-secondary-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-secondary-900 mb-4">How It Works</h2>
					<p class="text-xl text-secondary-600">Your journey to homeownership starts here</p>
				</div>
				
				<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
					<div class="relative text-center">
						<div class="bg-primary-600 text-white w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-6 font-bold text-lg">1</div>
						<h3 class="text-xl font-semibold text-secondary-900 mb-4">Search Properties</h3>
						<p class="text-secondary-600">Browse through thousands of listings using our advanced search filters.</p>
						<div class="hidden md:block absolute top-6 left-1/2 transform translate-x-6 w-32 h-0.5 bg-primary-200"></div>
					</div>
					
					<div class="relative text-center">
						<div class="bg-primary-600 text-white w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-6 font-bold text-lg">2</div>
						<h3 class="text-xl font-semibold text-secondary-900 mb-4">Schedule Viewing</h3>
						<p class="text-secondary-600">Book a tour with our expert agents to see the property in person.</p>
						<div class="hidden md:block absolute top-6 left-1/2 transform translate-x-6 w-32 h-0.5 bg-primary-200"></div>
					</div>
					
					<div class="text-center">
						<div class="bg-primary-600 text-white w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-6 font-bold text-lg">3</div>
						<h3 class="text-xl font-semibold text-secondary-900 mb-4">Make an Offer</h3>
						<p class="text-secondary-600">Submit your offer and let our agents handle the negotiation process.</p>
					</div>
				</div>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="py-16 bg-primary-600 text-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h2 class="text-3xl font-bold mb-6">Ready to Find Your Dream Home?</h2>
				<p class="text-xl mb-8 text-primary-100">Join millions of users who trust Elite Real Estate for their home search</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/properties" class="btn bg-white text-primary-600 hover:bg-primary-50 px-8 py-4 text-lg font-semibold">
						Browse Properties
					</a>
					<a href="/contact" class="btn border-2 border-white text-white hover:bg-white hover:text-primary-600 px-8 py-4 text-lg font-semibold">
						Contact an Agent
					</a>
				</div>
			</div>
		</section>
	</main>
</Layout>