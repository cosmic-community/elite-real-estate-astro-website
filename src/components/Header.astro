---
// src/components/Header.astro
---

<header class="bg-white shadow-sm border-b border-secondary-200 sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-primary-600">
          Elite Real Estate
        </a>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          Home
        </a>
        <a href="/properties" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          Properties
        </a>
        <a href="/agents" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          Agents
        </a>
        <a href="/about" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          About
        </a>
      </nav>

      <!-- Contact Button -->
      <div class="hidden md:block">
        <a href="/contact" class="btn-primary">
          Contact Us
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-secondary-600 hover:text-primary-600 p-2">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-secondary-200 py-4">
      <nav class="flex flex-col space-y-4">
        <a href="/" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          Home
        </a>
        <a href="/properties" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          Properties
        </a>
        <a href="/agents" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          Agents
        </a>
        <a href="/about" class="text-secondary-600 hover:text-primary-600 transition-colors duration-200">
          About
        </a>
        <a href="/contact" class="btn-primary w-full text-center">
          Contact Us
        </a>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>