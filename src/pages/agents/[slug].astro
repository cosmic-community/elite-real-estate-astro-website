// src/pages/agents/[slug].astro
---
import Layout from '../../layouts/Layout.astro';
import { getAgent, getAgents, getPropertiesByAgent } from '../../lib/cosmic';
import type { Agent, Property } from '../../types';

export async function getStaticPaths() {
  try {
    const agents = await getAgents();
    
    return agents.map((agent: Agent) => ({
      params: { slug: agent.slug },
      props: { agent },
    }));
  } catch (error) {
    console.error('Error fetching agents for static paths:', error);
    return [];
  }
}

interface Props {
  agent: Agent;
}

const { agent } = Astro.props as Props;

if (!agent) {
  return Astro.redirect('/agents');
}

let properties: Property[] = [];
try {
  properties = await getPropertiesByAgent(agent.id);
} catch (error) {
  console.error('Error fetching properties for agent:', error);
  properties = [];
}
---

<Layout title={`${agent.title} - Elite Real Estate`}>
  <main>
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <!-- Agent Header -->
        <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
          <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
            {agent.metadata.photo && (
              <img 
                src={`${agent.metadata.photo.imgix_url}?w=200&h=200&fit=crop&auto=format,compress`}
                alt={agent.metadata.full_name}
                class="w-32 h-32 rounded-full object-cover"
              />
            )}
            
            <div class="text-center md:text-left">
              <h1 class="text-3xl font-bold mb-2">{agent.metadata.full_name}</h1>
              {agent.metadata.bio && (
                <p class="text-gray-600 mb-4">{agent.metadata.bio}</p>
              )}
              
              <div class="flex flex-col sm:flex-row gap-4 mb-4">
                {agent.metadata.phone && (
                  <a href={`tel:${agent.metadata.phone}`} class="flex items-center text-blue-600 hover:text-blue-800">
                    <span class="mr-2">üìû</span>
                    {agent.metadata.phone}
                  </a>
                )}
                {agent.metadata.email && (
                  <a href={`mailto:${agent.metadata.email}`} class="flex items-center text-blue-600 hover:text-blue-800">
                    <span class="mr-2">‚úâÔ∏è</span>
                    {agent.metadata.email}
                  </a>
                )}
              </div>
              
              {agent.metadata.specialties && agent.metadata.specialties.length > 0 && (
                <div>
                  <h3 class="font-semibold mb-2">Specialties:</h3>
                  <div class="flex flex-wrap gap-2">
                    {agent.metadata.specialties.map((specialty: string) => (
                      <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                        {specialty}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>

        <!-- Properties Listed -->
        {properties.length > 0 && (
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-6">Properties Listed by {agent.metadata.full_name}</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {properties.map((property: Property) => (
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                  {property.metadata.gallery && property.metadata.gallery.length > 0 && (
                    <img 
                      src={`${property.metadata.gallery[0].imgix_url}?w=400&h=300&fit=crop&auto=format,compress`}
                      alt={property.title}
                      class="w-full h-48 object-cover"
                    />
                  )}
                  
                  <div class="p-4">
                    <h3 class="font-semibold text-lg mb-2">{property.title}</h3>
                    <p class="text-gray-600 mb-2">{property.metadata.address}</p>
                    <p class="text-2xl font-bold text-blue-600 mb-2">
                      ${property.metadata.price?.toLocaleString()}
                    </p>
                    
                    <div class="flex justify-between text-sm text-gray-500 mb-4">
                      <span>{property.metadata.bedrooms} beds</span>
                      <span>{property.metadata.bathrooms} baths</span>
                      {property.metadata.square_feet && (
                        <span>{property.metadata.square_feet.toLocaleString()} sq ft</span>
                      )}
                    </div>
                    
                    <a 
                      href={`/properties/${property.slug}`}
                      class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded transition-colors"
                    >
                      View Details
                    </a>
                  </div>
                </div>
              ))}
            </div>
          </div>
        )}

        <!-- Contact Form -->
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h2 class="text-2xl font-bold mb-6">Contact {agent.metadata.full_name}</h2>
          
          <form class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                <input type="text" id="name" name="name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input type="email" id="email" name="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
              </div>
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
              <input type="tel" id="phone" name="phone" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
              <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="I'm interested in working with you..."></textarea>
            </div>
            
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-6 rounded-md transition-colors">
              Send Message
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
</Layout>