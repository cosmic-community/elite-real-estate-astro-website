---
import Layout from '../../layouts/Layout.astro'
import PropertyCard from '../../components/PropertyCard.astro'
import { getProperties } from '../../lib/cosmic'
import type { Property } from '../../types'

const properties = await getProperties()
---

<Layout 
  title="Properties - Elite Real Estate"
  description="Browse our collection of luxury properties for sale and rent. Find your dream home with Elite Real Estate."
>
  <!-- Page Header -->
  <section class="bg-secondary-50 py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-secondary-900 mb-4">
          Our Properties
        </h1>
        <p class="text-xl text-secondary-600 max-w-2xl mx-auto">
          Discover our collection of luxury properties in the most desirable locations. 
          Each property is carefully selected for its quality, location, and investment potential.
        </p>
      </div>
    </div>
  </section>

  <!-- Properties Grid -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {properties.length > 0 ? (
        <>
          <div class="flex items-center justify-between mb-8">
            <p class="text-secondary-600">
              Showing {properties.length} propert{properties.length !== 1 ? 'ies' : 'y'}
            </p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {properties.map((property: Property) => (
              <PropertyCard property={property} />
            ))}
          </div>
        </>
      ) : (
        <div class="text-center py-16">
          <svg class="w-16 h-16 text-secondary-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9h6v6H9z" />
          </svg>
          <h3 class="text-xl font-medium text-secondary-900 mb-2">No properties found</h3>
          <p class="text-secondary-600 mb-6">We're currently updating our property listings. Please check back soon.</p>
          <a href="/contact" class="btn-primary">
            Contact Us for Available Properties
          </a>
        </div>
      )}
    </div>
  </section>
</Layout>