---
import Layout from '../layouts/Layout.astro';
import { getProperties, getAgents } from '../lib/cosmic';
import type { Property, Agent } from '../types';

const properties = await getProperties();
const agents = await getAgents();
---

<Layout title="Elite Real Estate - Luxury Properties">
  <main>
    <!-- Hero Section -->
    <section class="relative h-screen bg-gradient-to-r from-gray-900 to-gray-700 flex items-center justify-center">
      <div class="absolute inset-0 bg-black opacity-50"></div>
      <div class="relative z-10 text-center text-white px-4">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">Elite Real Estate</h1>
        <p class="text-xl md:text-2xl mb-8">Discover Your Perfect Luxury Property</p>
        <a href="/properties" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
          View Properties
        </a>
      </div>
    </section>

    <!-- Featured Properties -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Featured Properties</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {properties.slice(0, 6).map((property) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden">
              <img 
                src={property.metadata.image?.imgix_url ? `${property.metadata.image.imgix_url}?w=400&h=300&fit=crop&auto=format,compress` : '/placeholder-property.jpg'} 
                alt={property.title}
                class="w-full h-48 object-cover"
              />
              <div class="p-6">
                <h3 class="text-xl font-semibold mb-2">{property.title}</h3>
                <p class="text-gray-600 mb-2">{property.metadata.location}</p>
                <p class="text-2xl font-bold text-blue-600">${property.metadata.price?.toLocaleString()}</p>
                <div class="flex justify-between items-center mt-4 text-sm text-gray-500">
                  <span>{property.metadata.bedrooms} beds</span>
                  <span>{property.metadata.bathrooms} baths</span>
                  <span>{property.metadata.square_feet} sqft</span>
                </div>
                <a href={`/properties/${property.slug}`} class="block mt-4 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-4 rounded transition-colors">
                  View Details
                </a>
              </div>
            </div>
          ))}
        </div>
        <div class="text-center mt-12">
          <a href="/properties" class="inline-block bg-gray-800 hover:bg-gray-900 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
            View All Properties
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Agents -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Meet Our Agents</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {agents.slice(0, 3).map((agent) => (
            <div class="bg-gray-50 rounded-lg shadow-lg overflow-hidden text-center">
              <img 
                src={agent.metadata.photo?.imgix_url ? `${agent.metadata.photo.imgix_url}?w=300&h=300&fit=crop&auto=format,compress` : '/placeholder-agent.jpg'} 
                alt={agent.title}
                class="w-full h-64 object-cover"
              />
              <div class="p-6">
                <h3 class="text-xl font-semibold mb-2">{agent.title}</h3>
                <p class="text-gray-600 mb-4">{agent.metadata.title}</p>
                <p class="text-gray-700 mb-4">{agent.metadata.bio}</p>
                <div class="flex justify-center space-x-4">
                  <a href={`mailto:${agent.metadata.email}`} class="text-blue-600 hover:text-blue-800">
                    Email
                  </a>
                  <a href={`tel:${agent.metadata.phone}`} class="text-blue-600 hover:text-blue-800">
                    Phone
                  </a>
                </div>
                <a href={`/agents/${agent.slug}`} class="block mt-4 bg-blue-600 hover:bg-blue-700 text-white text-center py-2 px-4 rounded transition-colors">
                  View Profile
                </a>
              </div>
            </div>
          ))}
        </div>
        <div class="text-center mt-12">
          <a href="/agents" class="inline-block bg-gray-800 hover:bg-gray-900 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
            View All Agents
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 bg-gray-900 text-white">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-4xl font-bold mb-8">Ready to Find Your Dream Home?</h2>
        <p class="text-xl mb-8">Contact us today for a personalized property consultation</p>
        <a href="/contact" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors">
          Get In Touch
        </a>
      </div>
    </section>
  </main>
</Layout>