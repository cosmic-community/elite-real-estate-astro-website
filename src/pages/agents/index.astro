---
import Layout from '../../layouts/Layout.astro';
import AgentCard from '../../components/AgentCard.astro';
import { getAgents } from '../../lib/cosmic';

const agents = await getAgents();
---

<Layout title="Agents - Elite Real Estate">
  <main>
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-4xl font-bold text-center mb-12">Our Agents</h1>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {agents.map((agent) => (
          <AgentCard agent={agent} />
        ))}
      </div>
      
      {agents.length === 0 && (
        <div class="text-center py-12">
          <p class="text-gray-600 text-lg">No agents found.</p>
        </div>
      )}
    </div>
  </main>
</Layout>